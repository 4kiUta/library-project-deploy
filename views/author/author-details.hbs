<h2>Details for {{name}}</h2>
<div>
    <p>Bio: {{bio}}</p>
    <img src="{{picture_url}}" alt="{{name}}" width="300">

    {{!-- I want to see if the author as anybooks inside the proriety --}}
    {{#if books}}
    <h2>Books by this author:</h2>
    <ul>
        {{#each books}}
        <li>{{title}}</li>
        {{/each}}
    </ul>
    {{else}}
    <h2>Add books by this author: </h2>
    <form action="/authors/{{_id}}/edit" method="post">
        {{#each booksList}}
        <input type="checkbox" name="books" value="{{this._id}}" id="{{this.title}}">
        <label for="{{this.title}}">{{this.title}}</label>
        <br>
        {{/each}}
        {{/if}}


        <button type="submit">Add</button>
    </form>


</div>