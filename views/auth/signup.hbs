<h2>Signup</h2>
<form action="/signup" method="post">
    <label for="username">Username</label>
    <input type="text" name="username" id="username" placeholder="king" required>
    <!--CLIENT SIDE VALIDAION But thIS CAN BE reMOVED -->

    <label for="email">Email</label>
    <input type="email" name="email" id="email" placeholder="king@space.com" required>
    <!--CLIENT SIDE VALIDAION But thIS CAN BE reMOVED -->

    <label for="pass">Password</label>
    <input type="password" name="password" id="pass" placeholder="+++++++" required>
    <!--CLIENT SIDE VALIDAION But thIS CAN BE reMOVED -->

    <button type="submit">Create Account</button>
</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}